{
  "version": "1",
  "metadata": {
    "name": "aetheros-websocket-service"
  },
  "build": {
    "provider": "node",
    "steps": {
      "install": {
        "commands": ["yarn install --frozen-lockfile"]
      }
    }
  },
  "deploy": {
    "startCommand": "yarn start",
    "healthCheckPath": "/health",
    "healthCheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}