{
  "$schema": "https://schema.railpack.com",
  "provider": "node",
  "packages": {
    "node": "20.19.5"
  },
  "steps": {
    "install": {
      "commands": [
        "yarn install --immutable"
      ],
      "caches": ["yarn-cache"]
    },
    "build": {
      "inputs": [{ "step": "install" }],
      "commands": [
        "yarn workspace aetheros-frontend build"
      ]
    }
  },
  "deploy": {
    "startCommand": "yarn workspace aetheros-frontend start",
    "inputs": [
      { "step": "build", "include": ["."] }
    ]
  },
  "caches": {
    "yarn-cache": {
      "directory": "/root/.yarn/cache",
      "type": "shared"
    }
  }
}