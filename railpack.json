{
  "version": "1",
  "metadata": {
    "name": "aether-os"
  },
  "services": {
    "frontend": {
      "root": "./frontend",
      "build": {
        "provider": "node",
        "installCommand": "yarn install --immutable",
        "buildCommand": "yarn build"
      },
      "start": {
        "command": "yarn start"
      }
    },
    "auth-service": {
      "root": "./backend/services/auth-service",
      "build": {
        "provider": "node",
        "installCommand": "yarn install --immutable"
      },
      "start": {
        "command": "yarn start"
      }
    },
    "generation-service": {
      "root": "./backend/services/generation-service", 
      "build": {
        "provider": "node",
        "installCommand": "yarn install --immutable"
      },
      "start": {
        "command": "yarn start"
      }
    },
    "websocket-service": {
      "root": "./backend/services/websocket-service",
      "build": {
        "provider": "node",
        "installCommand": "yarn install --immutable"
      },
      "start": {
        "command": "yarn start"
      }
    }
  }
}