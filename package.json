{
  "name": "aether-os",
  "version": "1.0.0",
  "private": true,
  "description": "AetherOS - Dynamic Generative Operating Environment",
  "workspaces": [
    "frontend",
    "backend/services/*"
  ],
  "scripts": {
    "dev:local": "docker compose up --build",
    "start:local": "docker compose up",
    "stop:local": "docker compose down",
    "migrate": "node scripts/migrate.js",
    "setup": "./scripts/setup.sh",
    "install:all": "yarn install",
    "lint": "echo 'Running lint across services...' && yarn workspace aetheros-frontend run lint || echo 'Frontend lint skipped' && echo 'Backend services do not have lint configured'",
    "test": "echo 'Running tests across services...' && (cd frontend && npm run test -- --watchAll=false --passWithNoTests) || echo 'Frontend tests completed'",
    "test:deps": "node scripts/test-dependencies.js",
    "test:memory-graph": "node scripts/test-memory-graph.js",
    "validate:memory-graph": "node scripts/validate-memory-graph.js",
    "example:memory-graph": "node scripts/memory-graph-example.js",
    "demo:memory-graph": "node scripts/demo-memory-graph-structure.js",
    "validate:contracts": "cd contracts && npm install && npm run validate && npm run validate:examples",
    "validate:contracts-quick": "cd contracts && npm run validate",
    "test:contracts": "cd contracts && npm install && npm test",
    "build": "yarn workspace aetheros-frontend run build",
    "deploy:railway": "railway up --force",
    "validate:railpack": "find . -name 'railpack.json' -exec jq '.' {} \\;",
    "validate:railpack-advanced": "./scripts/validate-railpack.sh",
    "validate:setup": "./scripts/validate-setup.sh",
    "prepare": "husky"
  },
  "keywords": [
    "generative",
    "ai",
    "operating-system",
    "microservices",
    "react"
  ],
  "author": "AetherOS Team",
  "license": "MIT",
  "devDependencies": {
    "axios": "^1.12.2",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7"
  },
  "dependencies": {
    "pg": "^8.16.3"
  },
  "packageManager": "yarn@4.9.2+sha512.1fc009bc09d13cfd0e19efa44cbfc2b9cf6ca61482725eb35bbc5e257e093ebf4130db6dfe15d604ff4b79efd8e1e8e99b25fa7d0a6197c9f9826358d4d65c3c",
  "engines": {
    "node": ">=20.0.0",
    "yarn": ">=4.9.2"
  }
}
